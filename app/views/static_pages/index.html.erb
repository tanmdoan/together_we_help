<!-- MAIN SECTION -->
<section class="main-section">
  <!-- CONTENT SECTION -->
  <section class="full-width content-section">
      <div class="row">
          <div class="small-12 medium-12 large-12 columns">
              <h2>Welcome!</h2>
              <div class="fb-like"
                data-share="true"
                data-width="450"
                data-show-faces="true">
              </div>
          </div> <!-- END 12 COLUMNS -->
      </div> <!-- END ROW -->
  </section> <!-- END SECTION.CONTENT-SECTION -->




<!-- SERVICES SECTION -->
  <section class="full-width services-section">
      <div class="row">
          <div class="small-12 medium-4 large-4 columns">
              <h3>The Arrangement</h3>
              <p>Simply find events that are happening near you by logging in and clicking find opportunities.</p>
          </div>

          <div class="small-12 medium-4 large-4 columns">
              <h3>Vote</h3>
              <p>Vote with your friends to decide which events sounds interesting.</p>
          </div>

          <div class="small-12 medium-4 large-4 columns">
              <h3>Participate</h3>
              <p>Once an event has been chosen, get together on event day and help!</p>
          </div>

      </div> <!-- END ROW -->
  </section> <!-- END SECTION.FULL-WIDTH.SERVICES-SECTION -->



  <!-- CALL 2 ACTION -->
  <section class="full-width call-to-action">
      <div class="row">
          <div class="small-12 medium-12 large-12 columns">
              <%= link_to 'Start Volunteering!', "#", class: 'button radius' %>
          </div>
      </div>
  </section>

</section> <!-- END SECTION.MAIN-SECTION -->

  <!-- FOOTER SECTION -->
  <footer>
      <div class="row">

            <div class="small-1 medium-1 large-1 columns">&nbsp;</div>
            <div class="small-3 medium-3 large-3 columns">
              <%= image_tag('gu_robert.jpg', class: 'th bob') %>
            </div>
            <div class="small-6 medium-6 large-6 columns">
              <h4>The Buzz</h4>
              <p>
                I've always wanted to give more to the community but haven't found the motivation to do so. <br>
                Ever since I started using Together We Help, I've been actively participating weekly. The
                great part about it is I've been abable to get my peers to take initiative as well!
              </p>
              <p>&mdash; Bob</p>
            </div>
            <div class="small-2 medium-2 large-2 columns"></div>

          </div>


      </div> <!-- END ROW -->
  </footer> <!-- END FOOTER -->
