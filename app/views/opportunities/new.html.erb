<div class='row'>
  <div class='medium-12 columns'>
    <h1>Opportunities Near You</h1>
    <% @opportunities.each do |opportunity| %>
      <div class="panel">
        <%= form_for @opportunity do |f| %>
          <h5>Title:</h5>
          <%= opportunity.title %></br>
          <%= f.hidden_field :title, value: opportunity.title %>

          </br><h5>Organization:</h5>
          <%= opportunity.organization %>
          </br>
          <%= f.hidden_field :organization_name, value: opportunity.organization %>
          </br><h5>Description:</h5>
          <%= raw opportunity.description %>
          <%= f.hidden_field :description, value: opportunity.description %>

          </br><h5>Start Date:</h5>
          <%= opportunity.start_date %>
          <%= f.hidden_field :start_date, value: opportunity.start_date %>

          </br></br>
          <%= f.hidden_field :vm_url, value: opportunity.vm_url %>
          <%= f.submit class: 'button small' %><%= link_to 'More info', opportunity.vm_url, class: 'button small secondary' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
