<% @opportunities.data.each do |datum| %>
  <%= form_for @opportunity do |f| %>
    <%= f.label get_organization(datum) %>
    <%= f.hidden_field :organization_name, value: get_organization(datum)  %>
    <%= f.label get_title(datum) %>
    <%= f.label get_description(datum) %>

    <%= f.submit %>
  <% end %>
<% end %>
